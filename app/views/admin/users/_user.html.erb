<li>
  <%= gravatar_for user, size: 50 %>
  <div class="col-md-2">
    <%= link_to user.name, admin_user_path(user) %>
  </div>
  <div class="col-md-4">
    <%= t ".created_at" %> : <%= l user.created_at, format: :long %>
  </div>
  <div class="col-md-2">
    <%= link_to t(".delete"), admin_user_path(user.id),
      class: "btn btn-xs btn-danger",method: :delete,
      data: {confirm: t(".ask_before_delete")} %>
  </div>
</li>
